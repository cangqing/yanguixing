.map {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
} 

.list-item{  
  display: flex;
} 

.left{  width: 100rpx;  height:160rpx;} 

.right{ 
    margin-top: 10px;
    display: flex;  
    flex-direction: row;
    height: 40px;
} 

.title{ 
    word-break: break-all;
    width: 100%;
    height: 20px;
    padding-bottom: 10px;
} 

.position{ 
    word-break: break-all;
    width: 100%;
    height: 20px;
    padding-left: 10px;
    padding-bottom: 10px;
}

.name{  font-size: 50rpx;  color: #000;} 
.price{  width: 200px;margin-top:20px;color: rgb(238, 44, 44);margin-left: 50px;}