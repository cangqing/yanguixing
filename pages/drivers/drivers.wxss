.driver-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
} 

.driver-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.driver-item {
  margin: 20rpx;
  align-items: right;
}

.driver-line{
  width: 100%;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  border-bottom: 2px dotted #000;
}

.list-item{  
  height: 80rpx;  display: flex;
} 

.left{  width: 100rpx;  height:160rpx;} 

.right{ 
    margin-top: 10px;
    display: flex;  
    flex-direction: row;
    height: 40px;
} 

.title{ 
    word-break: break-all;
    width: 100%;
    height: 20px;
    padding-bottom: 10px;
} 

.position{ 
    word-break: break-all;
    width: 100%;
    height: 20px;
    padding-top: 10px;
}

.name{  font-size: 50rpx;  color: #000;} 
.price{  width: 200px;margin-top:20px;color: rgb(238, 44, 44);margin-left: 50px;}